namespace entitlement;

table Feature {
  struct_version:ushort;
  reserved0:ushort;
  license_id:string;
  feature_id:ulong;
  support_expiry_timestamp:ulong;
}

enum LicenseType : byte { Regular, Floating, FakeDebugOnly }

table LicenseBlock {
  struct_version:ushort;
  program_version:uint;
  type:LicenseType;
  license_id:string;
  issue_date:ulong;
  expiry_date:ulong;
  entitlements:[Feature];
}