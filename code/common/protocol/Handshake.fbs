namespace protocol;

enum UserPermissions : ubyte (bit_flags) {
  Guest,
  Reporter,
  Developer,
  Master
}

table HandshakeRequest {
  protocolVersion:ushort;
  token:string;
  guid:string;
  name:string;
  password:string;
}

table HandshakeAck {
  perms:UserPermissions;
  userIndex:uint;
  numUsers:int;
}