namespace protocol;

enum ProtocolVersion : int
{
    // Change this value whenever we are adding breaking changes
    Current = 10,
}

enum DisconnectReason : uint
{
    Quit,
    Kicked,
    BadPassword,
    BadConnection,
    TimedOut,
}

enum AnnounceType : byte
{
    FirstJoin,
    Joined,
    Disconnect
}

table Announcement {
  type:AnnounceType;
  name:string;
}