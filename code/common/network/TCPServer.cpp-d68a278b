#include "TCPServer.h"

namespace network {

  Server::Server(TCPServerConsumer &consumer, int16_t port) :
      _consumer(consumer), _acc(port)
  {
	_acc.set_option(SOL_SOCKET, SO_KEEPALIVE, 1);
  }

  void Server::Tick()
  {
	sockpp::tcp_socket sock = _acc.accept();
  }
} // namespace network